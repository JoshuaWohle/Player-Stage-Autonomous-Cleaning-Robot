package robot;

public class Orientation {
	/**
	 * current orientation of the robot when the robot is not required to turn
	 */
	public static final int CURRENT = 0;
	/**
	 * Compass direction North
	 */
	public static final int NORTH = 90;
	/**
	 * Compass direction West
	 */
	public static final int WEST = 180;
	/**
	 * Compass direction South
	 */
	public static final int SOUTH = 270;
	/**
	 * Compass direction East
	 */
	public static final int EAST = 360;
	/**
	 * Maximum degrees
	 */
	public static final int MAX_DEGREES = 360;
	
}
